<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <h3 class="col-6 offset-3">Sing Up on Wonderlust</h3>
  <div class="col-6 offset-3">
    <form
      action="/user/signup"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="username" class="form-lable">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Add a unique Username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter The Username</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-lable">Email</label>
        <input
          type="text"
          name="email"
          id="email"
          placeholder="Add Your Email Address"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter Email Address</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-lable">Password</label>
        <input
          type="text"
          name="password"
          id="password"
          placeholder="Enter your Password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">You Have't added your password</div>
      </div>
      <button class="btn btn-success">Sign up</button>
    </form>
  </div>
</div>
